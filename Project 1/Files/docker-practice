//this pipeline script works

pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'farahc123/jenkinstest'
        DOCKER_TAG = 'test1'
        DOCKERFILE_PATH = 'C:/Users/farah/OneDrive - Sparta Global/Documents/Github/tech501-sparta-app-CICD/nodejs20-sparta-test-app/app/Dockerfile'
        CONTEXT_PATH = 'C:/Users/farah/OneDrive - Sparta Global/Documents/Github/tech501-sparta-app-CICD/nodejs20-sparta-test-app'
        DOCKER_REGISTRY = 'https://index.docker.io/v1/'
    }

    stages {
        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        // Login to Docker Hub
                        bat '''echo %DOCKER_PASS% | docker login %DOCKER_REGISTRY% -u %DOCKER_USER% --password-stdin'''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    bat '''docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% -f "%DOCKERFILE_PATH%" "%CONTEXT_PATH%"'''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    bat '''docker push %DOCKER_IMAGE%:%DOCKER_TAG%'''
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    // Logout from Docker
                    bat '''docker logout %DOCKER_REGISTRY%'''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}
